<!--its using razor code to let the website know where the razor page is located-->
@page "/admin/books"
@page "/admin"
@inherits OwningComponentBase<IBookStoreRepository>




<table class="table table-sm table-striped table-bordered">

    <thead>
        <tr>
            <th>Book ID</th>
            <th>Book Title</th>
            <th>Book Category</th>
        </tr>
    </thead>
    <tbody>

        @if (BookData?.Count() > 0)
        {
            @foreach (Models.Books b in BookData)

            {
        <tr>
            <td>@b.BookId</td>
            <td>@b.Title</td>
            <td>@b.Category</td>


            <td>
                <NavLink class="btn btn-info btn-sm" href="@GetDetailsUrl(b.BookId)">Details</NavLink>
            </td>

            <td>
                <NavLink class="btn btn-warning btn-sm" href="@GetEditUrl(b.BookId)">Edit</NavLink>
            </td>
            <!--I use badge for my second incoporation of bootstrap Badges are numerical indicators of how many items are associated with a link:-->
            <td>
                <button class="btn btn-danger btn-sm badge" @onclick="@(x => RemoveBook(b))">Delete</button>
            </td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Books</td>
            </tr>

        }

    </tbody>

</table>

<NavLink class="btn btn-primary" href="/admin/books/create">Create</NavLink>

@code {

    public IBookStoreRepository repo => Service;
    public IEnumerable<Models.Books> BookData { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await UpdateData();
    }

    public async Task UpdateData()
    {
        BookData = await repo.Books.ToListAsync();
    }

    public string GetDetailsUrl(long id) => $"/admin/books/details/{id}";
    public string GetEditUrl(long id) => $"/admin/books/edit/{id}";

    public async Task RemoveBook (Models.Books b)
    {
        repo.DeleteBook(b);
        await UpdateData();
    }


}

